@{
    Layout = "_Layout";
}
<section class="chat-shell">
    <header class="chat-header">
        <h1>Chat with Achilles &amp; Patroclus</h1>
        <p class="subtitle">Friendly chat constrained to what they would know.</p>
    </header>

    <div id="chat-window" class="chat-window" aria-live="polite"></div>

    <form id="chat-form" class="chat-form" autocomplete="off">
        <input id="chat-input" name="message" placeholder="Ask about Troy, Chiron, Hector…" />
        <button type="submit">Send</button>
    </form>
</section>

